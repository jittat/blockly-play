<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= current_page.data.title || "เล่นกับ Blockly" %></title>

    <%= javascript_include_tag "blockly_compressed.js", :relative => true %>
    <%= javascript_include_tag "javascript_compressed.js", :relative => true %>
    <%= javascript_include_tag "blocks_compressed.js", :relative => true %>
    <% if current_page.data.custom_block_js %>
      <% current_page.data.custom_block_js.each do |f| %>
        <%= javascript_include_tag f, :relative => true %>
      <% end %>
    <% end %>
    <%= javascript_include_tag "th.js", :relative => true %>
    <%= javascript_include_tag "jquery/jquery-3.2.1.min.js", :relative => true %>

    <link rel="stylesheet" type="text/css" href="<%= url_for 'stylesheets/base.css', :relative => true %>" />
    <link href="https://fonts.googleapis.com/css?family=Mitr|Trirong:300" rel="stylesheet"> 
  </head>
  <body>
    <div class="header">
      <div class="index-link">
        <a href="<%= url_for 'index.html', :relative => true %>">สนุกกับ Blockly</a>
      </div>
      <div class="header-title"><%= current_page.data.header_title %></div>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
