      </value>
    </block>
    <block type="num_elements"></block>
    <block type="controls_for">
      <field name="VAR" id="=UP}qqOB,LrqC~]l9A[w" variabletype="">i</field>
      <value name="FROM">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="TO">
        <shadow type="math_number">
          <field name="NUM">200</field>
        </shadow>
      </value>
      <value name="BY">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="text_print">
      <value name="TEXT">
        <block type="text_join">
          <mutation items="2"></mutation>
          <value name="ADD0">
            <shadow type="text">
              <field name="TEXT">เพื่อนได้อันดับที่ </field>
            </shadow>
          </value>
          <value name="ADD1">
            <block type="variables_get">
              <field name="VAR" id="=UP}qqOB,LrqC~]l9A[w" variabletype="">i</field>
            </block>
          </value>
        </block>
      </value>
    </block>
    <block type="array_loop">
      <field name="loopvar" id="TVB5~Gu!fnffI]%k=LER" variabletype="">X</field>
    </block>
    <block type="array_loop_skip_first">
      <field name="loopvar" id="TVB5~Gu!fnffI]%k=LER" variabletype="">X</field>
    </block>
  </category>
  <category name="Conditions">
    <block type="controls_if"></block>
    <block type="controls_if">
      <mutation else="1"></mutation>
    </block>
    <block type="logic_compare">
      <field name="OP">EQ</field>
    </block>
    <block type="logic_operation">
      <field name="OP">AND</field>
    </block>
  </category>
  <category name="Math">
    <block type="math_single">
      <field name="OP">ABS</field>
    </block>
    <block type="math_arithmetic">
      <field name="OP">ADD</field>
      <value name="B">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="math_number">
      <field name="NUM">1</field>
    </block>
    <block type="math_number">
      <field name="NUM">0</field>
    </block>
  </category>
  <category name="Variables" colour="#A65C81" custom="VARIABLE"></category>
</xml>


